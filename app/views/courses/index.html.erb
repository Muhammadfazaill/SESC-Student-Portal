<p id="notice" class="alert alert-info"><%= notice %></p>


  <div class="row pull-right">
      <%= form_with(url: courses_path, method: :get, local: true) do |form| %>
      <div class="col-md-8">
        <%= form.text_field :search, placeholder: "Search courses...", class:"form-control" %>
      </div>
      <div class="col-md-4">
        <%= form.submit "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  
<h1 class="mb-4">Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= number_to_currency(course.price) %></td>
        <td><%= link_to 'Show', course, class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
